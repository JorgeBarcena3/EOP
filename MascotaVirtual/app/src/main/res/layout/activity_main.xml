<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ImagenEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipo_de_estado"
        app:srcCompat="@drawable/happy" />

    <ImageButton
        android:id="@+id/HambreBtn"
        android:layout_width="107dp"
        android:layout_height="118dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="28dp"
        android:background="#00D81B60"
        android:scaleType="fitXY"
        android:src="@drawable/comida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Ba単oBtn"
        tools:src="@drawable/comida"
        tools:srcCompat="@drawable/comida" />

    <ImageButton
        android:id="@+id/Ba単oBtn"
        android:layout_width="120dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="44dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/ducha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ducha"
        tools:srcCompat="@drawable/ducha" />

    <ImageButton
        android:id="@+id/sue単oBtn"
        android:layout_width="108dp"
        android:layout_height="115dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/dormir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Ba単oBtn"
        tools:srcCompat="@drawable/dormir" />

    <TextView
        android:id="@+id/tipo_de_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="177dp"
        android:text="No tengo ninguna necesidad"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>